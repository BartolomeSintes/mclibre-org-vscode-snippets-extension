{
    "name": "mclibre-org-snippets",
    "displayName": "mclibre.org Snippets",
    "description": "Snippets aconsejados para seguir los cursos de mclibre.org",
    "version": "0.5.0",
    "publisher": "BartolomeSintes",
    "engines": {
        "vscode": "^1.39.0"
    },
    "categories": [
        "Snippets"
    ],
    "icon": "mclibre-logo.png",
    "homepage": "https://github.com/BartolomeSintes/mclibre-org-vscode-snippets-extension",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/BartolomeSintes/mclibre-org-vscode-snippets-extension"
    },
    "contributes": {
        "snippets": [
            {
                "language": "php",
                "path": "./snippets/snippets.json"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+alt+v ctrl+alt+l",
                "command": "editor.action.insertSnippet",
                "args": {
                    "langId": "php",
                    "name": "Pega HTML en PHP (l√≠neas)"
                }
            },
            {
                "key": "ctrl+alt+v ctrl+alt+b",
                "command": "editor.action.insertSnippet",
                "args": {
                    "langId": "php",
                    "name": "Pega HTML en PHP (bloque)"
                }
            },
            {
                "key": "ctrl+alt+v ctrl+alt+q",
                "command": "editor.action.insertSnippet",
                "args": {
                    "langId": "php",
                    "name": "Pega HTML en PHP (comillas)"
                }
            },
            {
                "key": "ctrl+alt+v ctrl+alt+d",
                "command": "editor.action.insertSnippet",
                "args": {
                    "langId": "php",
                    "name": "Pega HTML en HTML (desigualdades)"
                }
            },
            {
                "key": "ctrl+alt+v ctrl+alt+e",
                "command": "editor.action.insertSnippet",
                "args": {
                    "langId": "php",
                    "name": "Pega HTML en HTML (caracteres especiales)"
                }
            }
        ]
    }
}
